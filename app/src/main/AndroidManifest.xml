<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greatcairo.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MosquesActivity"
            android:label="Mosques"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.greatcairo.tourguide.MainActivity" />
        </activity>
        <activity
            android:name=".HotelsActivity"
            android:label="Churches"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.greatcairo.tourguide.MainActivity" />
        </activity>

        <activity
            android:name=".ResturantsActivity"
            android:label="Resturants"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.greatcairo.tourguide.MainActivity" />
        </activity>

        <activity
            android:name=".MuseumsActivity"
            android:label="Museums"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.greatcairo.tourguide.MainActivity" />
        </activity>

    </application>

</manifest>